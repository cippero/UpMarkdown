{
  "name": "upmarkdown",
  "displayName": "UpMarkdown",
  "description": "Updates links in markdown files based on their relative directory location",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.35.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.startFsWatch",
    "onCommand:extension.stopFsWatch",
    "onCommand:extension.updateLinks",
    "onCommand:extension.toggleBlacklist"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [{
        "command": "extension.startFsWatch",
        "title": "Start Continuous Link Updater"
      },
      {
        "command": "extension.stopFsWatch",
        "title": "Stop Continuous Link Updater"
      },
      {
        "command": "extension.updateLinks",
        "title": "Update Links"
      },
      {
        "command": "extension.toggleBlacklist",
        "title": "Add/Remove to Link Updater Blacklist"
      }
    ],
    "menus": {
      "explorer/context": [{
          "command": "extension.startFsWatch",
          "group": "1_modification@1",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "extension.stopFsWatch",
          "group": "1_modification@2",
          "when": "FsWatcherOn"
        },
        {
          "command": "extension.updateLinks",
          "group": "1_modification@3",
          "when": "explorerResourceIsFolder"
        },
        {
          "command": "extension.toggleBlacklist",
          "group": "1_modification@4"
        }
      ]
    },
    "configuration": {
      "title": "UpMarkdown",
      "properties": {
        "upMarkdown.blacklist": {
          "type": "array",
          "default": [
            "archive"
          ],
          "scope": "window",
          "description": "Specifies which files and folders should be ignored."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.3.1",
    "vscode": "^1.1.28",
    "tslint": "^5.12.1",
    "@types/node": "^10.12.21",
    "@types/mocha": "^2.2.42"
  },
  "dependencies": {
    "@types/lodash.partition": "^4.6.6",
    "fs": "0.0.1-security",
    "lodash.partition": "^4.6.0"
  }
}